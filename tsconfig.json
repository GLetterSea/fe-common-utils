{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    // "baseUrl": "src",
    // "paths": {
    //   "#json": ["json/index.ts"]
    // },
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}